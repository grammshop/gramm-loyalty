{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": [
    {
      "target": "gramador",
      "public": "dist/gramador",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "yama",
      "public": "dist/yama",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
